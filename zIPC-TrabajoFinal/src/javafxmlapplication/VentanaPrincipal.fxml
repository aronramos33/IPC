<BorderPane prefHeight="450.0" prefWidth="800.0" stylesheets="@../estilos/estiloVentanaPrincipal.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxmlapplication.VentanaPrincipalController">
   <top>
      <VBox BorderPane.alignment="CENTER">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="_Ayuda">
                  <items>
                    <MenuItem fx:id="sobreNosotrosMenu" mnemonicParsing="false" text="Sobre Nosotros">
                           <accelerator>
                              <KeyCodeCombination alt="DOWN" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                           </accelerator></MenuItem>
                  </items>
                </Menu>
              </menus>
            </MenuBar>
            <HBox alignment="CENTER_RIGHT" prefHeight="49.0" prefWidth="800.0" spacing="15.0" styleClass="hboxHeader">
               <children>
                  <ImageView fitHeight="70.0" fitWidth="279.0" pickOnBounds="true" preserveRatio="true" HBox.hgrow="ALWAYS">
                     <image>
                        <Image url="@../icons/Logo.png" />
                     </image>
                     <HBox.margin>
                        <Insets left="10.0" right="200.0" />
                     </HBox.margin>
                     <viewport>
                        <Rectangle2D />
                     </viewport>
                  </ImageView>
                  <Label id="labelTop" focusTraversable="false" layoutX="699.0" layoutY="39.0" text="¿No tienes cuenta?" />
                  <Button fx:id="registrarseBoton" mnemonicParsing="false" onAction="#registrarse" prefHeight="35.0" styleClass="botonRegistrar" text="Registrarse">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
                  <Button id="botonInicioSesion" fx:id="iniciarSesionBoton" mnemonicParsing="false" onAction="#inicioDeSesion" prefHeight="35.0" styleClass="botonInicioSesion" text="Iniciar Sesión">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor></Button>
               </children>
               <padding>
                  <Insets bottom="20.0" right="10.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="800.0" BorderPane.alignment="CENTER">
         <children>
            <GridPane VBox.vgrow="ALWAYS">
               <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="800.0" />
                  <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0" />
               </columnConstraints>
               <rowConstraints>
                  <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
               </rowConstraints>
               <children>
                  <HBox alignment="CENTER_LEFT" prefHeight="450.0" spacing="20.0" GridPane.columnIndex="1">
                     <children>
                        <ImageView fitHeight="209.0" fitWidth="405.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../build/classes/icons/fondo.png" />
                           </image>
                           <HBox.margin>
                              <Insets left="20.0" />
                           </HBox.margin>
                        </ImageView>
                        <VBox alignment="CENTER" spacing="20.0">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                           <children>
                              <Label alignment="CENTER" focusTraversable="false" lineSpacing="1.5" styleClass="descripcion" text="&quot;La Cistella&quot; es una plataforma que permite a los agricultores vender productos frescos y orgánicos directamente a los clientes y a los clientes comprar productos de productores locales de alta calidad." textAlignment="JUSTIFY" wrapText="true" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets right="10.0" />
                                 </VBox.margin></Label>
                              <Label alignment="CENTER" focusTraversable="false" lineSpacing="1.5" styleClass="descripcion" text="Es tu oportunidad, ¿a qué estás esperando? Inicia sesión o registrate y disfruta de nuestro servicio." textAlignment="JUSTIFY" wrapText="true" VBox.vgrow="ALWAYS">
                                 <VBox.margin>
                                    <Insets right="10.0" />
                                 </VBox.margin></Label>
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </GridPane>
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
